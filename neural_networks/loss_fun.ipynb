   "source": [
    "def loss(x,y,w):\n",
    "    score=np.dot(w,x.T)\n",
    "    margin=np.maximum(0,score-score[y]+1)\n",
    "    margin[y]=0\n",
    "    loss=np.sum(margin)\n",
    "    return loss"
   ]
  },
